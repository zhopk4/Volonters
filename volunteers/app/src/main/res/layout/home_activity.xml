<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6dfff">

    <TextView
        android:id="@+id/heading"
        android:layout_height="30pt"
        android:layout_width="match_parent"
        android:background="#F7EBFD"
        android:textSize="20sp"
        android:backgroundTint="#704e85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/events"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/baseline_event_24"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/heading"
        app:layout_constraintRight_toRightOf="@id/heading"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/participants"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/baseline_people_alt_24"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintLeft_toLeftOf="@id/heading"
        app:layout_constraintRight_toRightOf="@id/heading"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/baseline_list_alt_24"
        app:layout_constraintHorizontal_bias="0.665"
        app:layout_constraintLeft_toLeftOf="@id/heading"
        app:layout_constraintRight_toRightOf="@id/heading"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/baseline_account_box_24"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/heading"
        app:layout_constraintRight_toRightOf="@id/heading"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>